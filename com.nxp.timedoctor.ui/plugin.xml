<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
  <extension
        point="org.eclipse.ui.actionSets">
     <actionSet
           id="com.nxp.timedoctor.ui.TraceEditorActions"
           label="TimeDoctor"
           visible="true">
        <menu
              id="com.nxp.timedoctor.ui.menus.Trace"
              label="&amp;Trace">
           <groupMarker name="content"/>
           <separator name="additions"/>
        </menu>
        <action
              definitionId="com.nxp.timedoctor.ui.commands.ZoomBack"
              id="com.nxp.timedoctor.ui.actions.ZoomBack"
              label="Zoom &amp;Back"
              menubarPath="com.nxp.timedoctor.ui.menus.Trace/content"
              retarget="true"
              style="push"/>
        <action
              definitionId="com.nxp.timedoctor.ui.commands.ZoomFit"
              id="com.nxp.timedoctor.ui.actions.ZoomFit"
              label="Zoom to &amp;Fit"
              menubarPath="com.nxp.timedoctor.ui.menus.Trace/content"
              retarget="true"
              style="push"
              tooltip="Zoom to fit in window"/>
        <action
              definitionId="com.nxp.timedoctor.ui.commands.ZoomOut"
              id="com.nxp.timedoctor.ui.actions.ZoomOut"
              label="Zoom &amp;Out"
              menubarPath="com.nxp.timedoctor.ui.menus.Trace/content"
              retarget="true"
              style="push"
              tooltip="Zoom out on the current trace (50%)"/>
        <action
              definitionId="com.nxp.timedoctor.ui.commands.ZoomIn"
              id="com.nxp.timedoctor.ui.actions.ZoomIn"
              label="Zoom &amp;In"
              menubarPath="com.nxp.timedoctor.ui.menus.Trace/content"
              retarget="true"
              style="push"
              tooltip="Zoom in on the current trace (200%)"/>
     </actionSet>
  </extension>     
  <extension
        point="org.eclipse.ui.commands">
     <category
           description="TimeDoctor Commands"
           id="com.nxp.timedoctor.ui.commands"
           name="TimeDoctor"/>
     <command
           categoryId="com.nxp.timedoctor.ui.commands"
           id="com.nxp.timedoctor.ui.commands.ZoomFit"
           name="Zoom to Fit"/>
     <command
           categoryId="com.nxp.timedoctor.ui.commands"
           id="com.nxp.timedoctor.ui.commands.ZoomOut"
           name="Zoom Out"/>
     <command
           categoryId="com.nxp.timedoctor.ui.commands"
           id="com.nxp.timedoctor.ui.commands.ZoomIn"
           name="Zoom In"/>
     <command
           categoryId="com.nxp.timedoctor.ui.commands"
           id="com.nxp.timedoctor.ui.commands.ZoomBack"
           name="Zoom Back"/>
  </extension>
  <extension
        point="org.eclipse.ui.bindings">
        <scheme
            name="TimeDoctor Key Configuration"
            id="com.nxp.timedoctor.ui.keyConfiguration"/>
     <key
           commandId="com.nxp.timedoctor.ui.commands.ZoomBack"
           contextId="org.eclipse.ui.contexts.window"
           schemeId="com.nxp.timedoctor.ui.keyConfiguration"
           sequence="F2"/>
     <key
           commandId="com.nxp.timedoctor.ui.commands.ZoomFit"
           contextId="org.eclipse.ui.contexts.window"
           schemeId="com.nxp.timedoctor.ui.keyConfiguration"
           sequence="F5"/>
     <key
           commandId="com.nxp.timedoctor.ui.commands.ZoomOut"
           contextId="org.eclipse.ui.contexts.window"
           schemeId="com.nxp.timedoctor.ui.keyConfiguration"
           sequence="F3"/>        
     <key
           commandId="com.nxp.timedoctor.ui.commands.ZoomIn"
           contextId="org.eclipse.ui.contexts.window"
           schemeId="com.nxp.timedoctor.ui.keyConfiguration"
           sequence="F4"/>
  </extension>
  
</plugin>
